<Page x:Class="StupendousStylesChallenge.CompletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:StupendousStylesChallenge"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary Source="DonutDictionary.xaml" />
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Source="Assets/color-logo.png" Style="{StaticResource LogoStyle}" />
        <Image Grid.Row="1"
               Margin="0,0,0,20"
               Source="Assets/Ticket.jpg"
               Stretch="Uniform" />
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock FontSize="36"
                       Foreground="Black"
                       Text="Order" />
            <TextBlock HorizontalAlignment="Center"
                       FontSize="64"
                       Foreground="Black"
                       Text="96" />
        </StackPanel>
    </Grid>
</Page>
